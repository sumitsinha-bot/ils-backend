// Complete .env template for production
/*
# Server Configuration
NODE_ENV=production
PORT=5000
SERVER_ID=ils-server-1

# Database
DATABASE_URL=mongodb://username:password@localhost:27017/ils_production
MONGODB_URI=mongodb://username:password@localhost:27017/ils_production

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# RabbitMQ Configuration
RABBITMQ_URL=amqp://username:password@localhost:5672

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-256-bits

# MediaSoup Configuration
ANNOUNCED_IP=your-server-public-ip
RTC_MIN_PORT=20000
RTC_MAX_PORT=29999

# TURN Server Configuration (for NAT traversal)
TURN_USERNAME=your-turn-username
TURN_PASSWORD=your-turn-password
TURN_SERVER=turn:your-turn-server.com:3478

# Client Configuration
CLIENT_URL=https://your-domain.com

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=/uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/ils

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
HELMET_CSP_ENABLED=true
CORS_ORIGIN=https://your-domain.com

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_PORT=8080